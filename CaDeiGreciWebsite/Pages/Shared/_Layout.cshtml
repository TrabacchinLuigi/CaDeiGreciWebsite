<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1">
    <title>@ViewData["Title"] - Ca Dei Greci</title>
    <partial name="_FaviconsPartial" />
    <link rel="stylesheet"
          asp-fallback-href="/libs/bootstrap-icons/font/bootstrap-icons.css"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/ca-dei-greci-bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        @RenderSection("InitBody", required: false)
        <partial name="_NavbarTop" />
        @RenderSection("EndBody", required: false)
    </header>
    <div id="slide-first" class="slide text-white">
        <div class="bgimage" style="background-image:url('/images/10pax.jpeg');"></div>
        @*<div class="container d-flex text-center">
            <h1 class="display-3 mb-3">Menu</h1>
            <p class="lead">Consulta il nostro menù e scegli cosa ti va di gustare oggi.</p>
        </div>*@
    </div>
    <div class="container pt-5 mb-5 pb-5">
        @RenderBody()
    </div>

    <partial name="_Footer" />

    <script asp-fallback-src="/libs/popper.js/umd/popper.min.js"
            src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.5/umd/popper.min.js"></script>
    <script asp-fallback-src="/libs/jquery/jquery.min.js"
            src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script asp-fallback-src="/libs/bootstrap/js/bootstrap.min.js"
            src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.1/js/bootstrap.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/ScrollOpacity.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
