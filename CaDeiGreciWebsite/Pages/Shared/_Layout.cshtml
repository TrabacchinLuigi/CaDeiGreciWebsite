<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1" >
    <title>@ViewData["Title"] - Ca Dei Greci</title>
    <link rel="stylesheet" 
        asp-fallback-href="/libs/bootstrap-icons/font/bootstrap-icons.css" 
        href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/ca-dei-greci-bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
     <header>
        @RenderSection("InitBody", required: false)
        <partial name="_NavbarTop" />
        @RenderSection("EndBody", required: false)
    </header>
    @RenderBody()

    <footer class="footer text-light bg-dark">
        <div class="container">
            <div class="row">
                <div class="col-12 mt-5 col-sm-6 col-md-4 col-lg-3 overflow-hidden">
                    <div class="d-flex flex-column">
                        <div class="d-flex align-items-start mb-3">
                            <a class="brand" href="/">
                                <inlinesvg src="images/ca-dei-greci-logo.svg" />
                            </a>
                        </div>
                        <div class="d-flex align-items-start mb-3"><span class="copyright">&copy; 2020 - Ca Dei Greci</span></div>
                        <div class="d-flex align-items-start mb-3">
                            <div class="mr-3"><i class="bi-award"></i></div>
                            <div><a asp-area="" asp-page="/Privacy">Privacy</a></div>
                        </div>
                    </div>
                </div>
                <div class="col-12 mt-5 col-sm-6 col-md-2 col-lg-2 overflow-hidden">
                    <h5>Socials</h5>
                    <div class="d-flex flex-column">
                        <div class="d-flex align-items-start mb-3">
                            <i class="bi-facebook mr-3"></i>
                            <a href="https://www.facebook.com/ca-dei-greci" target="_blank">Facebook</a>
                        </div>
                        <div class="d-flex align-items-start mb-3">
                            <i class="bi-instagram mr-3"></i>
                            <a href="https://www.instagram.com/ca-dei-greci/" target="_blank">Instagram</a>
                        </div>
                    </div>
                </div>
                <div class="col-12 mt-5 col-sm-6 col-md-6 col-lg-4 overflow-hidden">
                    <h5>Contacts</h5>
                    <div class="d-flex flex-column text-light">
                        <div class="d-flex align-items-start mb-3">
                            <div class="mr-3"><i class="bi bi-compass"></i></div>
                            <div>
                                <span class="text-muted">Indirizzo</span><br />
                                <span>
                                    Via Costante Degan 3<br />
                                    30174 Venezia VE
                                </span>
                            </div>
                        </div>
                        <div class="d-flex align-items-start mb-3">
                            <div class="mr-3"><i class="bi bi-telephone"></i></div>
                            <div><span class="text-muted">Telefono</span><br /> <a href="tel:+39041000000">041 000000</a></div>
                        </div>
                        <div class="d-flex align-items-start mb-3">
                            <div class="mr-3"><i class="bi-clock"></i></div>
                            <div>
                                <div class="timetable">
                                    <div class="text-nowrap text-muted">Orari di apertura</div>
                                    mboh
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 mt-5 col-sm-6 d-md-none d-lg-block col-lg-3 overflow-hidden">
                    <h5>Navigation</h5>
                    <div class="d-flex flex-column text-light">
                        <a class="mb-2 ml-2" href="/#Home">Home</a>
                        <a class="mb-2 ml-2" href="/#AboutUs">About us</a>
                        <a class="mb-2 ml-2" href="/Menu">Menu</a>
                        <a class="mb-2 ml-2" href="/#ContactUs">Contact us</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script asp-fallback-src="/libs/popper.js/umd/popper.min.js"
            src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.5/umd/popper.min.js"></script>
    <script asp-fallback-src="/libs/jquery/jquery.min.js" 
            src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script asp-fallback-src="/libs/bootstrap/js/bootstrap.min.js" 
            src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.1/js/bootstrap.min.js"></script>
    
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/ScrollOpacity.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
